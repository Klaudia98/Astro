@model IEnumerable<Astro.DAL.Models.AsteroidsNeoWs>
@{
    ViewData["Title"] = "Obiekty blisko ziemi";
}

<style>
    .btn {
        background-color:#000080 !important;
    }
</style>

<h1 style="text-align:center">Obiekty blisko ziemi</h1>

@foreach(var item in Model)
{
    <table class="table table-bordered table-striped" style="background-color:@(item.Dangerous.Equals("True")?"#ff9999":"")">
        <tr>
            <th width="20%">Nazwa:</th>
            <td width="20%">@item.Name @(item.Dangerous.Equals("True") ? "(NIEBEZPIECZNE)" : "")</td>
            <th width="20%">Rozmiar:</th>
            <td width="20%">@item.Size</td>
            <td><a href="@item.Url" class="myButton" style="width:100%;text-align:center">Link</a></td>
        </tr>
        <tr>
            <th>Data pierwszej obserwacji:</th>
            <td>@item.FirstObservation</td>
            <th>Data ostatniej obserwacji:</th>
            <td colspan="2">@item.LastObservation</td>
        </tr>
    </table>
    <br />
    <br />
}