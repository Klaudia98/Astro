@model IEnumerable<Astro.DAL.Models.Topic>

@using Microsoft.AspNetCore.Identity
@using Astro.DAL.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Forum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Forum</h1>
@if (SignInManager.IsSignedIn(User))
{
    <a asp-controller="Forum" asp-action="AddTopic" class="btn btn-primary">Dodaj</a>
    <br />
    <br />
}

@foreach (var item in Model)
{
    <table class="table table-striped table-bordered">
        <tr>
            <td rowspan="2" width="10%">
                Ocena:
                <br />
                @item.Rate
            </td>
            <td width="45%">
                @item.Date
            </td>
            <td colspan="2">
                @item.User.Email
            </td>
        </tr>
        <tr>
            <td colspan="2" width="70%">
                <a asp-controller="Forum" asp-action="ShowTopic" asp-route-id="@item.Id">@item.Title</a>
            </td>
            @if (User.IsInRole("Administrator"))
            {
                <td>
                    <a asp-controller="Forum" asp-action="DeleteTopic" asp-route-id="@item.Id" class="btn btn-danger">Usuń</a>
                </td>
            }
        </tr>
    </table>
    <br />
}

